{% extends 'base.html.twig' %}

{% block title %}Hello AllAnnoncesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 list justify-content-center">
        {% for annonce in annonces %}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ annonce.title }}</h5>
                    <p>{{ annonce.dateAdd|date('Y-m-d') }}</p>
                    <p class="card-text">{{ annonce.container }}</p>
                    <a href="#" class="btn btn-primary">{{ annonce.price }}</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
