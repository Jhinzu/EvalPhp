{% extends 'base.html.twig' %}

{% block title %}Hello AllAnnoncesController!{% endblock %}


{% block body %}


    <div class="container my-4">
        <div class="d-flex justify-content-end">
            <a href="/admin/annonces" class="btn btn-primary">Admin<a/>
        </div>
        {{ form_start(searchForm, {'attr': {'class': 'form-inline'}}) }}
            {{ form_row(searchForm.title, {'attr': {'class': 'form-control me-2 mb-3'}}) }}
            <div class="d-flex .pad">
                {{ form_row(searchForm.type, {'attr': {'class': 'form-control me-2 mb-3'}}) }}
                {{ form_row(searchForm.department, {'attr': {'class': 'form-control me-2 mb-3'}}) }}
            </div>
            <div class="d-flex">
                {{ form_row(searchForm.recherche)}}
                <a href="/annonces" class="btn btn-primary mx-3">reset</a>
            </div>
        {{ form_end(searchForm) }}
    </div>

    <div class="container my-4">
    <div class="card-deck">
        {% for annonce in annonces %}
            <div class="card mb-4">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ annonce.title }}</h5>
                    <p class="card-text">{{ annonce.container }}</p>
                    <div class ="d-flex">
                        <p class="me-3">{{annonce.type}}</p>
                        <p>{{annonce.department}}</p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="">{{ annonce.price }} euros</p>
                        <p>{{ annonce.dateAdd|date('Y-m-d') }}</p>
                    </div>
                    <a href="/annonce/{{annonce.id}}" class="btn btn-primary">Consulter</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(annonces) }}
    </div>
</div>

{% endblock %}

